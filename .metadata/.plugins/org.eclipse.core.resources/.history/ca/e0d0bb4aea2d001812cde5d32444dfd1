
package parte1;
import java.awt.*;
import javax.swing.*;

public class ControlesAvanzadosSlider extends JFrame {

	public ControlesAvanzadosSlider () {
		super("Velocidad de crucero");
		setSize(300,200);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLayout (new FlowLayout ());
		JLabel lblBrillo = new JLabel("Escoja en nivel del brilo?");
		JButton btnAceptar = new JButton("Aceptar");
		
		JSlider sldUno = new JSlider(JSlider.HORIZONTAL);
		sldUno.setPreferredSize(new Dimension(290, 80));
		sldUno.setMinimum(10);
		sldUno.setMaximum(120);
		sldUno.setValue(90);
		sldUno.setMajorTickSpacing(20);
		sldUno.setMinorTickSpacing(5);
		sldUno.setPaintTicks(true);
		sldUno.setPaintLabels(true);
		add(lblBrillo);
		add(sldUno);
		add(btnAceptar);
		
		
		setVisible(true);
	}
	
	public static void main(String[] args) {
		ControlesAvanzadosSlider ventana = new ControlesAvanzadosSlider();

	}

}
